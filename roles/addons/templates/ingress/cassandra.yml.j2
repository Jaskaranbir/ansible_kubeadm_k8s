apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: cassandra
  labels:
    app: cassandra
  namespace: development
  annotations:
    ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: nginx-external
spec:
  rules:
    - host: cassandra.local
      http:
        paths:
          - path: /
            backend:
              serviceName: kind-bobcat-cassandra
              servicePort: 9042
